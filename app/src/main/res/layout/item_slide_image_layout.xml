<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_black">

        <TextView
            android:id="@+id/text_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_space_n"
            android:layout_marginTop="@dimen/content_space_n"
            android:text="@string/title_recommend_movie"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_n"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/content_space_s"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_period="2000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_recommend_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>